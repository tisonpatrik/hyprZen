#!/bin/bash

show_power_menu() {
  local menu_options=" Lock
󰤄 Suspend
 Relaunch
󰜉 Restart
󰐥 Shutdown"
  local selection=$(echo -e "$menu_options" | walker --dmenu --theme dmenu_150 -p "System")

  case "$selection" in
  *Lock*) hyprlock ;;
  *Suspend*) systemctl suspend ;;
  *Relaunch*) uwsm stop ;;
  *Restart*) systemctl reboot ;;
  *Shutdown*) systemctl poweroff ;;
  esac
}

show_power_menu
